---
import AuthLayout from "../layouts/AuthLogin.astro";
---

<AuthLayout title="Sign in">
  <div class="w-full max-w-md mx-auto">
    <form action="/api/auth/signin" method="post" class="card-b2b p-10 min-h-[520px] flex flex-col justify-center space-y-6">
      <!-- Logo -->
      <div class="flex justify-center mb-1">
        <img
          src="/B2B_RootsBarefoot.png"
          alt="Roots Barefoot Logo"
          class="w-56 h-auto object-contain"
        />
      </div>

      <div class="text-center mb-4">
        <h1 class="text-xl font-bold text-roots-bark">Portal B2B</h1>
        <p class="text-xs text-roots-clay mt-0.5">Tu catálogo Roots, listo para pedidos profesionales.</p>
      </div>

      <div class="h-px bg-base-300/60" />

      <!-- Email -->
      <div class="space-y-1.5">
        <label for="email" class="text-xs font-medium text-roots-earth">Email</label>
        <label class="input-b2b flex items-center gap-2 w-full">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4 text-roots-clay/50">
            <path d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
            <path d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
          </svg>
          <input type="email" name="email" id="email" class="grow bg-transparent outline-none text-sm" placeholder="tu@email.com" />
        </label>
      </div>

      <!-- Password -->
      <div class="space-y-1.5">
        <label for="password" class="text-xs font-medium text-roots-earth">Contraseña</label>
        <label class="input-b2b flex items-center gap-2 w-full">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4 text-roots-clay/50">
            <path fill-rule="evenodd" d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z" clip-rule="evenodd" />
          </svg>
          <input type="password" name="password" id="password" class="grow bg-transparent outline-none text-sm" placeholder="••••••••" />
        </label>
      </div>

      <button type="submit" class="btn btn-primary w-full text-sm font-medium">
        Iniciar sesión
      </button>
    </form>
  </div>
</AuthLayout>
